<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8612314A"
    tools:context=".MobileotpVerification">

    <TextView
        android:id="@+id/title_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#655F5F"
        android:gravity="center_horizontal"
        android:text="Enter credential to forget password"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="650dp"
        android:layout_below="@id/title_forget"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#F1D907">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mobile_for_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#792B2323"
                android:hint="Enter your mobile number"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/otp_filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#792B2323"
                android:hint="Enter otp sent"
                android:textSize="40sp" />


            <Button
                android:id="@+id/get_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Get otp"
                android:textSize="30sp" />


            <Button
                android:id="@+id/confirm_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Confirm"
                android:textSize="30sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>