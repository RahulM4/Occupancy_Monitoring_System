<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iiit"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3201E1E">

    </RelativeLayout>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/indian_institute_of_information_allahabad"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_capacity"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:text="@string/Enter"
        android:textSize="25sp" />

    <Button
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/availableseats"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="150dp"
        android:text="@string/registration"
        android:textSize="25sp" />

    <Button
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/admin"
        android:textSize="25sp" />
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/linearlayout1"
    android:orientation="horizontal">

        <TextClock
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm::ss"
            android:text="@string/date_time"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="40sp" />
        <TextClock
            android:id="@+id/date_time_am_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="a"
            android:layout_marginLeft="10dp"
            android:text="hh:mm:ss"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <TextClock
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout1"
        android:layout_marginLeft="15dp"
        android:format12Hour="MMM dd, yyyy"
        android:text="hh:mm:ss"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/help"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/occupy_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/et_text_background"
        android:text="@string/occupancy_status"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/available_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/occupy_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="@string/available_filled"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/max_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="400dp"
        android:text="@string/max_capacity"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/availableseats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="400dp"
        android:layout_marginRight="120sp"
        android:text="@string/available_seats"
        android:textColor="@color/white"
        android:textSize="30sp" />




</RelativeLayout>
