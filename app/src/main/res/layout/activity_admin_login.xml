<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splace_screen"
    tools:context=".AdminLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3201E1E">

    </RelativeLayout>

    <TextView
        android:id="@+id/admin_login_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Administration Use Only"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/admin_email"
        android:layout_width="650dp"
        android:layout_height="60dp"
        android:layout_below="@+id/admin_login_page_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200sp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/editext_background"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:hint="Email ID"
        android:padding="10dp"
        android:maxLength="50"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/admin_password"
        android:layout_width="650dp"
        android:layout_height="60dp"
        android:layout_below="@+id/admin_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@drawable/editext_background"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_below="@+id/admin_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        >
        <Button
            android:id="@+id/admin_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_background"
            android:textSize="30sp" />
        <Button
            android:id="@+id/admin_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_background"
            android:textSize="30sp"
            android:text="Clear"/>
    </LinearLayout>


</RelativeLayout>