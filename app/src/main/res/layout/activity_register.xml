<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iiit"
    tools:context=".Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3201E1E">

    </RelativeLayout>

        <TextView
            android:id="@+id/R_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#655F5F"
            android:text=" Register yourself "
            android:textColor="@color/white"
            android:textSize="60sp" />


                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="600sp"
                    android:layout_height="50sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="200sp"
                    android:background="#686868"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/white"
                    android:textSize="40dp" />


    <EditText
        android:id="@+id/input_mobile"
        android:layout_width="600sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300sp"
        android:background="#686868"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:textColorHint="@color/white"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="600sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400sp"
        android:background="#686868"
        android:hint="Enter IIITA Email Id"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="600sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500sp"
        android:background="#686868"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/input_confirm_password"
        android:layout_width="600sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600sp"
        android:background="#686868"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="40dp" />

            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="750sp"
                android:background="@drawable/btn_background"
                android:text="Register Now"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/already_have_an_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="880sp"
                android:text=" Already have an account? "
                android:textColor="@color/white"
                android:textSize="30sp" />



</RelativeLayout>